{
    "name": "vendingmachine/app",
    "description": "PHP Vending Machine System with user authentication, product management, and REST API",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.1",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.6"
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "test:coverage": "phpunit --coverage-html coverage",
        "serve": "php -S localhost:8000 -t public",
        "db:setup": "mysql -u root < database/schema.sql && mysql -u root < database/seed.sql"
    },
    "config": {
        "sort-packages": true
    }
}
